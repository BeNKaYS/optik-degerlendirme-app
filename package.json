{
  "name": "optik-degerlendirme-app",
  "main": "electron/main.cjs",
  "description": "Sınav Değerlendirme Uygulaması",
  "author": "Sercan ÖZDEMİR <sercanozdemir@yandex.com>",
  "private": true,
  "version": "1.4.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm run vite\" \"npm run electron\"",
    "vite": "vite",
    "electron": "wait-on tcp:5173 && electron . --dev",
    "build": "vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.sercanozdemir.optik-degerlendirme",
    "productName": "Optik Değerlendirme",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": [
        "tr-TR",
        "en-US"
      ],
      "language": "1055",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Optik Değerlendirme"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "xlsx": "^0.18.5",
    "xlsx-js-style": "^1.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}